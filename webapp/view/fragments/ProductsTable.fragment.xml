<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Table
        inset="false"
        id="idProductsTable"
        items="{ 
					path:'ProductCollection>/'
				}"
    >
        <columns>
            <Column>
                <Text text="{i18n>Product}" />
            </Column>
            <Column>
                <Text text="{i18n>UnitPrice}" />
            </Column>
			<Column>
                <Text text="{i18n>UnitsInStock}" />
            </Column>
			<Column>
                <Text text="{i18n>QuantityPerUnit}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                vAlign="Middle"
                press="onItemPress"
                type="Active"
            >
                <cells>
                    <ObjectIdentifier
                        title="{ProductCollection>ProductID}"
                        text="{ProductCollection>ProductName}"
                    />
                    <ObjectNumber
                        number="{
									parts:[{path:'UnitPrice'}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {showMeasure: true}
								}"
                        unit="USD"
                    />
					<ObjectNumber 
						number="{ProductCollection>UnitsInStock}"
					/>
					<Text text="{ProductCollection>QuantityPerUnit}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>
