<c:FragmentDefinition
xmlns="sap.m"
xmlns:c="sap.ui.core">
   	<Table inset="false"
				items="{ 
					path:'ProductCollection>/'
				}" >
				<columns>
					<Column>
						<Text text="{i18n>Product}"/>
					</Column>
					<Column>
						<Text text="{i18n>UnitPrice}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" press="onItemPress" type="Active" >
						<cells>
							<ObjectIdentifier 
								title="{ProductCollection>ProductID}"
								text="{ProductCollection>ProductName}" />
							<ObjectNumber 
								number="{
									parts:[{path:'ProductCollection>UnitPrice'},{path:''}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {showMeasure: true}
								}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
</c:FragmentDefinition>