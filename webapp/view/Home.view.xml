<mvc:View controllerName="com.bootcamp.sapui5.freestyle.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
		<Label text="{i18n>textLabel}" labelFor="nameInput" id="nameLabel"/>
        
		<Input
			id="nameInput"
			placeholder="{i18n>textPlaceHolder}"
            showSuggestion="false"
			showValueHelp="false"
            >			
		</Input>

        <Button text="{i18n>textBotoni18n}" id="buttonPrueba"
						press="onPress"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					
		</Button>
    </Page>
</mvc:View>